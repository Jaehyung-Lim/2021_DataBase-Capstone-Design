<h1>{{ title1 }}</h1>

<table> <!--테이블 형식으로 보여줍니다.-->
    <tr>
        <td>Dname</td>
        <td>Dnumber</td>
    </tr>
    {{#each department }}  <!--데이터가 있을 때 마다 행 단위로 실행되는 것입니다.-->
        <form method="post"> <!--즉 수정 버튼을 눌렀을 때 값을 넘겨줍니다.-->
            <tr>
                <td>{{Dname}}</td>
                <td>{{Dnumber}}</td>
                <td style="border: none; margin-left: 10px;">
                    <button 
                        style="margin-left: 10px;" 
                        name='delBtn' 
                        type="submit" 
                        value="{{Dnumber}}"                              
                     formaction="/delete"
                    >
                    삭제
                    </button>
                </td>   
            </tr>
        </form>
    {{/each}}
</table>

