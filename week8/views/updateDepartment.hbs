<h1>{{ title }}</h1>

<table> <!--테이블 형식으로 보여줍니다.-->
    <tr>
        <td>Dname</td>
        <td>Dnumber</td>
        <td>Mgr_ssn</td>
        <td>Mgr_start_date</td>
    </tr>
    {{#each dept_res}}  <!--데이터가 있을 때 마다 행 단위로 실행되는 것입니다.-->
        <form method="post"> <!--즉 수정 버튼을 눌렀을 때 값을 넘겨줍니다.-->
            <tr>
                <!--input tag를 사용하여 입력 가능한 형태로 변경-->
                <!--값을 update할 때 Dname field의 값만 바꾸는 것이므로 아래와 같이 합니다.-->
                <td><input type="text" name="dname" placeholder={{Dname}}></td>
            <!--나머지 값들은 기존의 값을 유지합니다.-->
                <td>{{Dnumber}}</td> <!--괄호 안의 값은 기존의 예시로 안에 보여지는 값입니다.-->
                <td>{{Mgr_ssn}}</td>
                <td>{{Mgr_start_date}}</td>
                <!--formaction 속성을 활용하여 입력한 값을 넘겨줍니다.-->
                <td><input type="submit" value="수정" formaction="/update/department"></td>
                <!--formaction: form 내부에서 사용하는 action 입니다.-->
                <!--method는 post이므로, update.js에서 router.post함수를 사용합니다.-->
            </tr>>
        </form>
    {{/each}}
</table>
