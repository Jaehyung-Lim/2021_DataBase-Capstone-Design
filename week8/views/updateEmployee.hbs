<h1>{{ title }}</h1>

<table> <!--데이터를 테이블 형식으로 보여줍니다.-->
    <tr> <!--행의 데이터-->
        <td>Fname</td> <!--열의 데이터-->
        <td>Minit</td>
        <td>Lname</td>
        <td>Ssn</td>
        <td>Bdate</td>
        <td>Address</td>
        <td>Sex</td>
        <td>Salary</td>
        <td>Super_ssn</td>
        <td>Dno</td>
    </tr>
    {{#each emp_res}}<!--데이터가 있을 때 마다 행 단위로 실행되는 것입니다.-->
        <form method="post" action='/update/employee'><!--즉 수정 버튼을 눌렀을 때 값을 넘겨줍니다.-->
        <tr> <!--input tag를 사용하여 입력 가능한 형태로 변경-->
            <td>{{Fname}}</td> <!--값을 update할 때 Salary field의 값만 바꾸는 것이므로 아래와 같이 합니다.-->
            <td>{{Minit}}</td>
            <td>{{Lname}}</td>
            <td>{{Ssn}}</td>
            <td>{{Bdate}}</td>
            <td>{{Address}}</td>
            <td>{{Sex}}</td>
            <td><input type="text" name="salary" placeholder={{Salary}}></td>
            <td>{{Super_ssn}}</td><!--위의 {{Salary}}에 새로운 Salary를 입력 받게 됩니다.-->
            <td>{{Dno}}</td>
            <td><input type="submit" value="수정"></td> <!--수정 이름을 갖는 submit 버튼을 생성합니다.-->
        </tr>>
        </form>
        {{/each}}   <!--이 곳 까지 반복 실행됩니다.-->
</table>
